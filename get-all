#!/bin/bash
echo "$(tree -I "node_modules|.git" -a)" > project_files.txt && find . -type f -not -path "./node_modules/*" -not -path "./.git/*" -not -path "./src/output.css" -not -path "./yarn.lock" -exec bash -c 'echo -e "\n\n===============================================\n= File: {} \n===============================================\n" >> project_files.txt && nl -ba {} >> project_files.txt' \;